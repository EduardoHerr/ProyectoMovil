<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="342.5dp"
        android:layout_height="365.5dp"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="INICIO DE SESION"
            android:layout_width="match_parent"
            android:layout_height="56.0dp"
            android:id="@+id/textView1"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textAlignment="center" />
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="72.0dp"
            android:id="@+id/linearLayout2">
            <TextView
                android:text=""
                android:layout_width="73.0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView2"
                android:width="50dp"
                android:background="@mipmap/profile_user_icon_148619" />
            <EditText
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txtUser"
                android:hint="Ingrese su Usuario" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="67.5dp"
            android:id="@+id/linearLayout3"
            android:layout_marginTop="25dp">
            <TextView
                android:text=""
                android:layout_width="76.0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView3"
                android:background="@mipmap/user_information_icon_148610" />
            <EditText
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txtClave"
                android:hint="Ingrese su Clave" />
        </LinearLayout>
        <Button
            android:text="INGRESAR"
            android:layout_width="284.5dp"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:layout_marginTop="62.0dp"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>